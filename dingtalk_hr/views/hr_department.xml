<odoo>

    <record id="view_department_form_inherit" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//widget[@name='web_ribbon']" position="before">
                <div name="button_box" class="oe_button_box">
                    <button name="create_ding_department" string="上传至钉钉" type="object" class="oe_stat_button" icon="fa-creative-commons" attrs="{'invisible':[('ding_id','!=', False)]}" groups="dingtalk_hr.manage_group">
                    </button>
                    <button name="update_ding_department" string="更新至钉钉" type="object" class="oe_stat_button" icon="fa-pencil-square-o" groups="dingtalk_hr.manage_group">
                    </button>
                    <button name="delete_ding_department" string="删除钉钉部门" type="object" class="oe_stat_button" icon="fa-trash-o" groups="dingtalk_hr.manage_group" attrs="{'invisible':[('ding_id','=', False)]}" confirm="确认删除钉钉部门？ 注意：不能删除根部门；不能删除含有子部门、成员的部门">
                    </button>
                </div>
            </xpath>
            <!-- <xpath expr="//field[@name='manager_id']" position='after'>
                <group>

                </group>
            </xpath> -->
            <xpath expr="//field[@name='parent_id']" position='after'>
                <field name="manager_user_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_edit': True, 'no_open': True}"/>
                <field name="is_root"/>
                <field name="is_hiding"/>
                <field name="ding_id" readonly="0" groups="dingtalk_hr.manage_group"/>
                <field name="ding_order" readonly="0" groups="dingtalk_hr.manage_group"/>
            </xpath>
        </field>
    </record>

    <record id="view_department_tree_interit" model="ir.ui.view">
        <field name="name">hr.department.tree</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position='before'>
                <field name="sequence" widget="handle"/>
            </field>
        </field>
    </record>


    <!--修改部门菜单显示路径-->
    <menuitem id="hr.menu_hr_department_tree" action="hr.open_module_tree_department" name="部门" parent="hr.menu_hr_root" sequence="5" groups="hr.group_hr_user"/>

</odoo>