<odoo>

    <record id="dingtalk_get_hrm_dimission_list_form_view" model="ir.ui.view">
        <field name="name">获取离职员工信息</field>
        <field name="model">dingtalk.get.hrm.dimission.list</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info" role="alert">
                    <p>查询离职员工信息!</p>
                </div>
                <footer>
                    <button string="开始查询" name="get_hrm_dimission_list" type="object" class="oe_highlight"/>
                    <button string="告辞" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="dingtalk_get_hrm_dimission_list_action" model="ir.actions.act_window">
        <field name="name">获取离职员工信息</field>
        <field name="res_model">dingtalk.get.hrm.dimission.list</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
